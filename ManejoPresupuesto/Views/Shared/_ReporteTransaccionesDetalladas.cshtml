@model ReporteTransaccionesDetalladas



<h4>
    <a asp-route-mes ="@ViewBag.mesAnterior" asp-route-año="@ViewBag.añoAnterior"
    class="btn btn-secondary"><i class="bi-chevron-left"></i></a>
    @Model.FechaInicio.ToString("MMM")-@Model.FechaInicio.Year 
    <a asp-route-mes="@ViewBag.mesPosterior" asp-route-año="@ViewBag.añoPosterior"
    class="btn btn-secondary"><i class="bi-chevron-right"></i></a>

</h4>


<div class="container p-2 ">
    <!-- 1 -->
    <div class="contenedor-totales  row" style="background-color:#f7f7f7; border:2px ridge #6b6b6b;">
    <div class="col-sm">
        <div>
            <strong>Depósitos</strong>
        </div>
        <div class="activo">
            @Model.BalanceDepositos.ToString("N")
        </div>
    </div>
    <!-- Separador -->
     <!-- 2 -->
    <div class="col-sm">
        <div>
            <strong>Retiros</strong>
        </div>
        <div class="activo">
            @Model.BalanceRetiros.ToString("N")
        </div>
    </div>
    <!-- Separador -->
     <!-- 3 -->
    <div class="col-sm">
        <div>
            <strong>Total</strong>
        </div>
        <div class="activo">
            @Model.Total.ToString("N")
        </div>
    </div>
    </div>
    <!-- Separador -->
</div>



@if (Model.TransaccionesAgrupadas.Count() == 0)
{
    <h5>No hay datos para mostrar.</h5>
}else 
{
    <table class="table">
        <tbody>
            @foreach(var transaccionAgrupada in Model.TransaccionesAgrupadas)
            {
                <tr style="background-color:lightblue; font-size:26px;">
                    <td colspan="3">
                        @transaccionAgrupada.FechaTransaccion.Day
                        <span class="badge bg-secondary">@transaccionAgrupada.FechaTransaccion.ToString("ddd")
                        </span>

                    </td>
                    <td class="activo">
                        @transaccionAgrupada.BalanceDepositos.ToString("N")
                    </td>
                    <td class="pasivo">
                        @transaccionAgrupada.BalanceRetiros.ToString("N")
                    </td>
                </tr>
                @foreach (var tran in transaccionAgrupada.Transacciones)
                {
                    <tr style="vertical-align:middle;">
                        <td>
                            <a asp-controller="Transacciones" asp-action="Actualizar" asp-route-id="@tran.ID"
                            asp-route-urlRetorno="@ViewBag.urlRetorno">
                                <i class="bi-pencil"></i>
                            </a>
                        </td>
                        <td>@tran.CATEGORIA</td>
                        <td>@tran.CUENTA</td>
                        <td class="activo"> @(tran.ID_OPERACION == TipoOperacion.Ingreso 
                            ? tran.MONTO.ToString("N") : null)
                        </td>
                        <td class="pasivo" >@(tran.ID_OPERACION == TipoOperacion.Gasto 
                            ? tran.MONTO.ToString("N") : null)</td>
                    </tr>
                }
            }
        </tbody>
    </table>
}