@model TipoCuenta

@{
    ViewData["Title"] = "Editar Tipo Cuenta";
}


<h1>Editar tipo cuenta: @Model.NOMBRE</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="TiposCuentas" asp-action="Editar">
    <!-- EL input oculto con el valor del ID -->
    <input type="hidden" asp-for="ID"/>
    <div class="mb-3">
        <label asp-for="NOMBRE" class="form-label"></label>
        <input type="text" asp-for="NOMBRE" class="form-control" />
        <span asp-validation-for="NOMBRE" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" href="#" onClick="window.location.href = '../' ;" >Cancelar</a>
    
</form>


@section Scripts 
{
    <partial name="_ValidationScriptsPartial" />
}